{
  "mode_id": "COUNTDOWN",
  "display_name": "倒计时",
  "icon": "flag",
  "cacheable": false,
  "description": "重要日期倒计时/正计时",
  "content": {
    "type": "computed",
    "provider": "countdown",
    "fallback": {
      "events": [
        { "name": "元旦", "date": "2027-01-01", "type": "countdown", "days": 100 }
      ]
    }
  },
  "layout": {
    "status_bar": { "line_width": 1, "dashed": false },
    "body": [
      { "type": "list", "field": "events", "max_items": 1, "item_template": "{name}", "font_size": 16, "align": "center" },
      { "type": "list", "field": "events", "max_items": 1, "item_template": "{date}", "font_size": 11, "align": "center" },
      { "type": "separator", "style": "short", "width": 70 },
      { "type": "list", "field": "events", "max_items": 1, "item_template": "{days} 天", "font_size": 52, "align": "center" }
    ],
    "footer": { "label": "COUNTDOWN", "attribution_template": "— Remember" }
  }
}
